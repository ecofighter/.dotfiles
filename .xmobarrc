-- vim: ft=haskell
Config { font = "xft:Osaka－等幅:size=10"
	, bgColor = "#1c1c1c"
	, fgColor = "#757575"
	, position = TopSize C 100 35
	,lowerOnStart = False
	, overrideRedirect = False
	, border = NoBorder
	, borderColor = "#26a69a"
	--commands
	, commands = 	[ Run Network "wlp1s0"	[ "-t"		, "<dev>: ↓<rx>kB/s↑<tx>kB/s "
						, "-L"		, "40"
						, "-H" 		, "200"
						, "--normal"	, "#ffffff"
						, "--high"	, "#d5d6a7"
						] 10
		     	, Run MultiCpu		[ "-t"		, "<total0>.<total1>.<total2>.<total3>  "
						, "-L"		, "40"
						, "-H"		, "85"
						, "-m"		, "2"
						, "--normal"	, "#ffffff"
						, "--high"		, "#f44336"
						] 10
			, Run Memory		[ "-t"		, "<usedratio>% "
						, "-L"		, "40"
						, "-H"		, "90"
						, "-m"		, "2"
						, "--normal"	, "#ffffff"
						, "--high"	, "#f44336"
						] 10
			, Run Battery		[ "-t"		, "<acstatus> "
						, "-L"		, "20"
						, "-H"		, "80"
						, "--low"	, "#f44556"
						, "--normal"	, "#ffffff"
						, "--"
							, "-o"	, "<left>% (<timeleft>)"
							, "-O"	, "Charging <left>%"
							, "-i"	, "<left>%"
						] 50
			, Run Date "%a %m/%d %H:%M" "date" 10
			, Run StdinReader
			]
	, sepChar = "%"
	, alignSep = "}{"
	, template = " %StdinReader% }{》%multicpu% 》%memory% 》%wlp1s0% 》%battery% <fc=#ece391>%date%</fc> "
	}
